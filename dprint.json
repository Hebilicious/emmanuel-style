{
	"markdown": {},
	"biome": {
		"lineWidth": 100,
		"semicolons": "asNeeded",
		"trailingCommas": "none"
	},
	"malva": {
		"printWidth": 150
	},
	"markup": {
		"quotes": "double",
		"closingBracketSameLine": true,
		"vBindStyle": "short",
		"vOnStyle": "short",
		"vForDelimiterStyle": "of",
		"vSlotStyle": "short",
		"vBindSameNameShortHand": true
	},
	"yaml": {
		"quotes": "forceDouble",
		"formatComments": true,
		"trailingComma": false
	},
	"excludes": [
		"**/node_modules",
		"**/.nuxt",
		"**/generated/*.d.ts",
		"**/worker-configuration.d.ts",
		"pnpm-workspace.yaml",
		"pnpm-lock.yaml"
	],
	"plugins": [
		"https://plugins.dprint.dev/markdown-0.17.8.wasm",
		"https://plugins.dprint.dev/biome-0.6.0.wasm",
		"https://plugins.dprint.dev/g-plane/malva-v0.11.1.wasm",
		"https://plugins.dprint.dev/g-plane/markup_fmt-v0.19.0.wasm",
		"https://plugins.dprint.dev/g-plane/pretty_yaml-v0.5.1.wasm"
	]
}
