---
import ExternalLink from "../components/ExternalLink.astro"
import Github from "../components/Github.astro"
import LinkedIn from "../components/LinkedIn.astro"
import Quotes from "../components/Quotes.vue"
import SideName from "../components/SideName.vue"
import ThemeButton from "../components/ThemeButton.vue"
import Twitter from "../components/Twitter.astro"
import Layout from "../layouts/Layout.astro"
import { themesList } from "../utils/useTheme"

const iconHeight = "1.5rem"
---

<Layout title="Emmanuel">
  <div id="rootId" class="Root">
    <div class="Top">
      <div class="PageContainer">
        <div class="Landing">
          <div class="ContentWrapper">
            <div class="Content">
              <div class="Heading">
                <img
                  src="/images/Profile.png"
                  width="100"
                  height="100"
                  alt="Profile Picture"
                />
              </div>
              <div class="Name">
                <h2>Emmanuel LD</h2>
              </div>
              <div class="Logos">
                <div class="Icons">
                  <ExternalLink
                    label="twitter"
                    url="twitter.com/its_hebilicious">
                    <Twitter iconHeight={iconHeight} />
                  </ExternalLink>
                  <ExternalLink label="github" url="github.com/Hebilicious">
                    <Github iconHeight={iconHeight} />
                  </ExternalLink>
                  <ExternalLink
                    label="linkedIn"
                    url="www.linkedin.com/in/emmanuel-donnet">
                    <LinkedIn iconHeight={iconHeight} />
                  </ExternalLink>
                </div>
              </div>
              <div class="MainText">
                <div>Digital Citizen</div>
                <div>International Empire</div>
                <div>Earth Republic</div>
              </div>
              <div class="BlogLink">
                <a href="/blog">Library â†’</a>
              </div>
              <Quotes client:load />
            </div>
            <SideName client:load />
          </div>
          <div class="Separation">
            <div></div>
            <div class="FakeLine"></div>
          </div>
        </div>
      </div>
    </div>
    <div class="Bottom">
      <div class="ThemeSwitcher">
        {
          Array.from(themesList).map(([name, themeClass]) => (
            <ThemeButton client:load theme={[name, themeClass]} />
          ))
        }
      </div>
    </div>
  </div>
</Layout>

<style is:global lang="postcss">
.Root {
  display: grid;
  grid-template-rows: 1fr 5rem;
  position: relative;
  height: 100dvh;
  width: 100%;
  max-width: 100%;
  background: var(--primaryBackground);
  color: var(--primaryText);
  transition: background 1s ease;

  .Top {
    display: grid;
    height: auto;
    overflow-y: auto;
    scrollbar-width: thin;
    scrollbar-color: var(--activeBorder) transparent;

    &::-webkit-scrollbar {
      width: 12px;
    }

    &::-webkit-scrollbar-track {
      background: transparent;
    }

    &::-webkit-scrollbar-thumb {
      background-color: var(--activeBorder);
      border-radius: 20px;
      border: 3px solid transparent;
    }
  }

  .Bottom {
    display: grid;
    padding-left: 2rem; /* pl-8 */
    align-items: center;
  }
}

.PageContainer {
  display: grid;
  position: relative;
  width: 100%;
  max-width: 100%;
}

.Landing {
  display: grid;
  gap: 0.5rem;
  height: auto;
}

.ContentWrapper {
  display: grid;
  padding-left: 2rem;
  grid-template-columns: 1fr 2rem;
}

.Content {
  display: grid;
  gap: 2rem;
  padding-top: 3rem;
  grid-template-rows: repeat(5, auto) 6rem;
}

.Heading {
  display: grid;
  align-items: center;

  img {
    height: 5rem;
    width: auto;
    border-radius: 100%;
    object-fit: contain;
    box-shadow: -10px 15px 30px 0 rgba(0, 0, 0, 0.13);
  }
}

.Name {
  font-size: var(--typography_fluid-content-2xl);
  line-height: 2.25rem;
  font-weight: 700;

  h2 {
    font-size: var(--typography_fluid-content-2xl);
    line-height: 2.25rem;
  }
}

.Logos {
  display: grid;
}

.SubText {
  font-size: var(--typography_fluid-content-s);
  font-style: italic;
}

.Separation {
  --height: 3px;
  display: grid;
  grid-template-columns: 60% auto;
  height: var(--height);
  width: 100%;

  .FakeLine {
    background: var(--activeBorder) no-repeat center/100% var(--height);
  }
}

.Icons {
  display: flex;
  justify-content: space-between;
  width: 50vmin;
}

.BlogLink {
  margin-top: 0.5rem;

  a {
    color: var(--primaryText);
    text-decoration: none;
    font-size: var(--typography_fluid-content-m);
    opacity: 0.8;
    transition: opacity 0.3s;

    &:hover {
      opacity: 1;
      text-decoration: underline;
    }
  }
}

.ThemeSwitcher {
  display: grid;
  grid-auto-flow: column;
  width: 70vmin;
  place-items: center;
}
</style>
